# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Python style
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Html style
[*.html]
indent_style = space
indent_size = 4

# Scss style
[*.scss]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2
